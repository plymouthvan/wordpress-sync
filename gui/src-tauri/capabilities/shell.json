{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "shell-commands",
  "description": "Permissions for executing CLI commands",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "wordpress-sync",
          "cmd": "wordpress-sync",
          "args": true
        },
        {
          "name": "which",
          "cmd": "which",
          "args": true
        },
        {
          "name": "wp",
          "cmd": "wp",
          "args": true
        },
        {
          "name": "ssh",
          "cmd": "ssh",
          "args": true
        },
        {
          "name": "rsync",
          "cmd": "rsync",
          "args": true
        },
        {
          "name": "scp",
          "cmd": "scp",
          "args": true
        },
        {
          "name": "pipx",
          "cmd": "pipx",
          "args": true
        },
        {
          "name": "pip",
          "cmd": "pip",
          "args": true
        },
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".*", "raw": true }]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "wordpress-sync",
          "cmd": "wordpress-sync",
          "args": true
        },
        {
          "name": "which",
          "cmd": "which",
          "args": true
        },
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".*", "raw": true }]
        }
      ]
    }
  ]
}
